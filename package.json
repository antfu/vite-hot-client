{
  "name": "vite-hot-client",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@6.32.3",
  "description": "Get Vite's import.meta.hot at runtime.",
  "homepage": "https://github.com/antfu/vite-hot-client#readme",
  "bugs": {
    "url": "https://github.com/antfu/vite-hot-client/issues"
  },
  "license": "MIT",
  "author": "Anthony Fu <anthonyfu117@hotmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/antfu/vite-hot-client.git"
  },
  "funding": "https://github.com/sponsors/antfu",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rimraf dist && unbuild && esmo scripts/patch-types.ts",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "prepublishOnly": "nr build",
    "release": "bumpp --commit --push --tag && pnpm publish",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "vite": "^2.6.0 || ^3.0.0-0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.18.9",
    "@antfu/ni": "^0.13.2",
    "@babel/types": "^7.17.0",
    "@types/node": "^17.0.23",
    "bumpp": "^7.1.1",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "pnpm": "^6.32.3",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.2",
    "unbuild": "^0.7.0",
    "vite": "^2.8.6",
    "vitest": "^0.7.10"
  }
}
